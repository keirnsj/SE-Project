<head>

    <title>Mapping Interesting Application Additions Using the Google Maps API</title>
    <style type="text/css">
        html { height: 100%; }
        body { height: 100%; margin: 0; padding: 0; }
        #MapCanvas { height: 90%; }
    </style>
    <script type="text/javascript"
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDg66T2Ih2JWNQzeKC42-appuf3hX6fcCs&sensor=false">
    </script>
    <script>
            function GetMap() {
                var Latitude = "47.478";
                var Longitude = "-120.708";
                var mapOptions = {
                    center: new google.maps.LatLng(Latitude, Longitude),
                    zoom: 7.1,
                    mapTypeId: 'satellite'
                }

                const map = new google.maps.Map(document.getElementById("MapCanvas"),
                mapOptions);

                const contentString = ["Glacier View Campground, located on Lake Wenatchee", "Fairhome Campground, located on Lake Crescent"];
                const lng2 = [-120.8099, -123.9140];
                const lat2 = [47.8239, 48.0708];

                const location1 = {lat: lat2[0], lng: lng2[0]};

                const infowindow = new google.maps.InfoWindow({
                content: contentString[0],
                });

                mark1 = new google.maps.Marker({
                    position: location1,
                    map,
                });

                mark1.addListener("click", () => {
                    infowindow.open({
                    anchor: mark1,
                    map,
                    shouldFocus: false,
                    });
                });

                const location2 = {lat: lat2[1], lng: lng2[1]};

                const infowindow2 = new google.maps.InfoWindow({
                content: contentString[1],
                });

                mark2 = new google.maps.Marker({
                    position: location2,
                    map,
                });

                mark2.addListener("click", () => {
                    infowindow2.open({
                    anchor: mark2,
                    map,
                    shouldFocus: false,
                    });
                });
                
            }
    </script>
</head>

<body onload="GetMap()">
    <div id="MapCanvas" style="width:100%; height:100%"></div>
</body>
